{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Jekyll: Serve",
      "type": "node-terminal",
      "request": "launch",
      "command": "bundle exec jekyll serve",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "gostonks: Auto cycle",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/src/gostonks.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "gostonks: Specific ticker",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/src/gostonks.py",
      "args": [
        "${input:gostonksTargetLine}"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "cwd": "${workspaceFolder}"
    }
  ],
  "inputs": [
    {
      "id": "gostonksTargetLine",
      "type": "promptString",
      "description": "Ticker and optional flags (e.g. AAPL, AAPL noai, AAPL noapi, AAPL noai noapi)",
      "default": "AAPL"
    }
  ]
}
